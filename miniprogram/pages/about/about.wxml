<!--miniprogram/pages/pdone/about/about.wxml-->
<view class="container">
  <!-- 用户 openid -->
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{avatarUrl}}"></image>
    <button open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" class="userinfo-nickname">
      {{nickName}}
    </button>
  </view>
  <view wx:if="{{userInfo.nickName=='昵称不再换啦'}}" class='downDept'>
    <!-- <view class="weui-cells__title">带说明的列表项</view> -->
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell resetHeight" hover-class="weui-cell_active" bindtap='showSetting'>
        <view class="weui-cell__bd">授权设置</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
      <view class="weui-cell resetHeight" hover-class="weui-cell_active" bindtap='showSysinfo'>
        <view class="weui-cell__bd">系统信息</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>
  </view>
  <button id='feedback' open-type='feedback' style='display:none'>意见反馈</button>
  <view class="weui-footer weui-footer_fixed-bottom">
    <view class="weui-footer__links">
      <view bindtap='showAbout' class="weui-footer__link">一个小程序</view>
      <!-- <view class="weui-footer__link"><label for='feedback'>意见反馈</label></view> -->
    </view>
    <view class="weui-footer__text">Copyright © 2019 Pdoner.cn</view>
  </view>
</view>